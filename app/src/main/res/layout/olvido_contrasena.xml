<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:minWidth="300dp"
    android:maxWidth="300dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    >

    <!--
    android:maxWidth="350dp"
    android:minWidth="350dp"
    -->

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:id="@+id/txtClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="X"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:gravity="center"
                android:background="@drawable/cercle_primary_background"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingrese su correo"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp" />

            </LinearLayout>

            <LinearLayout
                android:minHeight="300dp"
                android:elevation="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingBottom="30dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="15dp"
                        android:drawableLeft="@drawable/ic_correo"
                        android:background="@drawable/background_complete_editext"
                        android:hint="correo"
                        android:drawablePadding="8dp"
                        android:textColor="@color/colorInput"
                        android:paddingLeft="15dp"
                        android:inputType="text"
                        android:textColorHint="@color/colorHint" />

                    <Button
                        android:shadowColor="@color/colorOrangeDark"
                        android:shadowRadius="10"
                        android:shadowDx="2"
                        android:shadowDy="5"
                        android:id="@+id/btn_buscar"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Enviar"
                        android:textColor="#fff"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/boton_primary_sm" />



                </LinearLayout>




            </LinearLayout>

            <!--<TextView
                android:text="CurrÃ­culum"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>